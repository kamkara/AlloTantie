
<%= form_with(model: product) do |f| %>
  
  <div class="form-inputs">
    <%= f.text_field :title, class:"border p-1", placehorder:"Titre de l'annonce ..." %>
    
    <%= f.text_field :imag_product, class:"border p-1", placehorder:"Titre de l'annonce ..." %>
     <%= f.rich_text_area :content, class: " bg-withe",
     placeholder: "Saissir le contenu du sujet..." %>
    <%= f.text_field :price %>
    <%= f.text_field :category %>
    <%= f.text_field :img_country %>
    
    
  </div>



  <!-- component -->
<div class="flex h-screen bg-gray-200 items-center justify-center  mt-32 mb-32">
  <div class="grid bg-white rounded-lg shadow-xl w-11/12 md:w-10/12 lg:w-2/3">
   
    <div class="flex justify-center">
      <div class="flex">
        <h1 class="text-gray-600 font-bold md:text-2xl text-xl">annonce produit</h1>
      </div>
    </div>

    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold">Nom du produit</label>
      <%= f.text_field :title, class:"py-2 px-3 rounded-lg border-2 border-yellow-300 mt-1 hover:border-transparent", placeholder:"Nom du produit" %>
    </div>

  

    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold">Prix</label>
      
        <%= f.text_field :price, class:"py-2 px-3 rounded-lg border-2 border-yello-300 mt-1 hover:border-transparent", placeholder:" â‚¬10" %>
    </div>
    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold">categorie</label>
      <select class="py-2 px-3 rounded-lg border-2 border-purple-300 mt-1 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
        <option>Categorie 1</option>
        <option>Option 1</option>
        <option>Option 2</option>
        <option>Option 3</option>
      </select>
    </div>
    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold">Pays</label>
      <select class="py-2 px-3 rounded-lg border-2 border-purple-300 mt-1 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
        <option>Pays</option>
        <option>Option 2</option>
        <option>Option 3</option>
      </select>
    </div>

    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold">Details produit</label>
      <%= f.rich_text_area :content, class:"py-2 px-3 rounded-lg border-2 border-purple-300 mt-1 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent", placeholder: "Ajouter plus de detail sur le produit" %>
    </div>

    <div class="grid grid-cols-1 mt-5 mx-7">
      <label class="uppercase md:text-sm text-xs text-gray-500 text-light font-semibold mb-1">Upload Photo</label>
        <div class='flex items-center justify-center w-full'>
            <label class='flex flex-col border-4 border-dashed w-full h-32 hover:bg-gray-100 hover:border-purple-300 group'>
                <div class='flex flex-col items-center justify-center pt-7'>
                  <svg class="w-10 h-10 text-purple-400 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                  <p class='lowercase text-sm text-gray-400 group-hover:text-purple-600 pt-1 tracking-wider'>Select a photo</p>
                </div>
              <input type='file' class="hidden" />
            </label>
        </div>
    </div>

    <div class='flex items-center   md:gap-8 gap-4 pt-5 pb-5'>
      <%= f.submit "Publie produit", class:"bg-yellow-500 p-3 m-4 border text-white rounded font-semibold" %>
    </div>

  </div>
</div>
<% end %>
